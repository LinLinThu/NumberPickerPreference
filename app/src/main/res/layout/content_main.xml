<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/buttonWithHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/btn_margin"
                android:layout_marginTop="@dimen/btn_margin"
                android:layout_marginEnd="@dimen/btn_margin"
                android:text="With Header" />

            <Button
                android:id="@+id/buttonWithoutHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/btn_margin"
                android:layout_marginTop="@dimen/btn_margin"
                android:layout_marginEnd="@dimen/btn_margin"
                android:text="Without Header" />

            <Button
                android:id="@+id/buttonGrid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/btn_margin"
                android:layout_marginTop="@dimen/btn_margin"
                android:layout_marginEnd="@dimen/btn_margin"
                android:text="Grid Layout" />

            <Button
                android:id="@+id/buttonCustomLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/btn_margin"
                android:layout_marginTop="@dimen/btn_margin"
                android:layout_marginEnd="@dimen/btn_margin"
                android:text="Custom Header Layout" />

            <Button
                android:id="@+id/buttonScrollableList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/btn_margin"
                android:layout_marginTop="@dimen/btn_margin"
                android:layout_marginEnd="@dimen/btn_margin"
                android:text="Scroll Layout" />

            <Button
                android:id="@+id/buttonRounded"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/btn_margin"
                android:layout_marginTop="@dimen/btn_margin"
                android:layout_marginEnd="@dimen/btn_margin"
                android:text="Rounded Layout" />

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>